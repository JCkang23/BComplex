                    </tr>
                </table>
                <input type="submit" name="more" value=" + See More +">
            </div>
        </div>

        <div class="btns" style="display: flex;">
            <form action="/payment" method="POST" class="actions">
                <input type="submit" name="payments" value="Payment History">
            </form>
            <form action="/chat" method="POST" class="actions">
                <input type="submit" name="chats" value="Chat With Renters">
            </form>
