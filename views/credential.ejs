<%- include ('partials/header.ejs') %>

<link rel="stylesheet" href="/styles/main.css">

<div class="credential">
    <h1>BComplex</h1>
    <p style="color: #ffffff; font-size: 1.1rem; margin-bottom: 1.5rem; text-shadow: 0 1px 2px rgba(0,0,0,0.5); font-weight: 400; letter-spacing: 0.5px;">
        Your trusted platform for property management
    </p>
    
    <div class="credential-content">
        <h3>
            <p>Welcome to BComplex</p>
        </h3>
        
        <p style="color: #404550; margin-bottom: 1.5rem; font-size: 1rem; line-height: 1.6;">
            Join thousands of landlords and renters who trust BComplex for their property needs
        </p>

        <div class="credentials">
            <form action="/register" method="GET">
                <input type="submit" name="register" class="btn btn-register" value="Get Started">
            </form>
            <form action="/login" method="GET">
                <input type="submit" name="login" class="btn btn-login" value="Sign In">
            </form>
        </div>
        
        <div style="margin-top: 1.5rem; padding: 0.8rem; background: #f9fafb; border-radius: 10px; border: 1px solid #e5e7eb;">
            <p style="color: #6b7280; font-size: 0.9rem; margin: 0; font-weight: 500;">
                ✨ Secure • Fast • Reliable
            </p>
        </div>
    </div>
</div>