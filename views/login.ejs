<%- include ('partials/header.ejs') %>

<link rel="stylesheet" href="/styles/main.css">

<div class="login">
    <h2>Welcome back!</h2>
    <p style="color: #ffffff; font-size: 1rem; margin-bottom: 1.5rem; text-shadow: 0 1px 2px rgba(0,0,0,0.5); font-weight: 400; letter-spacing: 0.5px;">
        Sign in to your BComplex account
    </p>
    
    <div class="login-content">

        <form action="/login" method="POST" class="log" style="width: 100%; max-width: 400px;">
            <h3>Sign In</h3>
            <p class="text-muted" style="margin-bottom: 1rem;">Enter your credentials to access your account</p>
            
            <div style="margin: 1rem 0;">
                <select name="role" id="function" class="form-select" required>
                    <option value="">Select your role*</option>
                    <option value="landlord">üè† Landlord</option>
                    <option value="renter">üè¢ Renter</option>
                </select>
            </div>

            <div style="margin: 0.8rem 0;">
                <input type="text" name="email" class="form-control" placeholder="Enter your email address*" required>
            </div>
            
            <div style="margin: 0.8rem 0;">
                <input type="password" name="password_hash" class="form-control" placeholder="Enter your password*" autocomplete="off" required>
            </div>
            
            <div style="margin: 1.5rem 0;">
                <input type="submit" class="btn btn-login" value="Sign In">
            </div>
        </form>
    </div>

    <div style="margin-top: 1rem;">
        <p class="text-muted">Don't have an account? <a href="/register">Create Account</a></p>
        <p class="text-muted">Back to <a href="/">Home</a></p>
    </div>

</div>